<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon
	  id="pvr.lanettv"
	  version="0.0.4"
	  name="PVR Lanet TV Client for Helix 14.x"
	  provider-name="Lanet Network">
	  <requires>
	    <c-pluff version="0.1"/>
	    <import addon="xbmc.pvr" version="1.9.2"/>
	    <import addon="repository.lanet.ua" optional="false"/>
	  </requires>
	  <extension
	    point="xbmc.pvrclient"
	    library_linux="Kodi_LanetTV_nix64.so"
	    library_osx="Kodi_LanetTV_macOS.so"
	    library_wingl="Kodi_LanetTV_win32.dll"
	    library_windx="Kodi_LanetTV_win32.dll" />
	  <extension point="xbmc.addon.metadata">
	    <summary lang="en">Lanet TV PVR Client</summary>
	    <summary lang="ru">Клиент PVR для Lanet TV</summary>
	    <summary lang="uk">Клієнт PVR для Lanet TV</summary>
	    <description lang="en">Lanet TV PVR Client</description>
	    <description lang="ru">Клиент PVR для Lanet TV</description>
	    <description lang="uk">Клієнт PVR для Lanet TV</description>
	    <disclaimer lang="en">In development</disclaimer>
	    <disclaimer lang="ru">В разработке</disclaimer>
	    <disclaimer lang="uk">У розробці</disclaimer>
	    <platform>all</platform>
	    <website>http://kodi.lanet.tv/</website>
	  </extension>
	</addon>

	<addon id="repository.lanet.ua" name="Lanet Network Add-ons for Kodi" version="1.0.0" provider-name="lanet.ua">
		<extension point="xbmc.addon.repository" name="Lanet Network Add-ons for Kodi">
			<info compressed="false">http://kodi.lanet.tv/repository.lanet.ua/addons.xml</info>
			<checksum>http://kodi.lanet.tv/repository.lanet.ua/addons.xml.md5</checksum>
			<datadir zip="true">http://kodi.lanet.tv/repository.lanet.ua/</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>Lanet Network Add-ons Repository</summary>
			<description>Plug-ins for Kodi</description>
			<platform>all</platform>
		</extension>
	</addon>	
</addons>
